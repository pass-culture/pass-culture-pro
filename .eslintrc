{
  "extends": [
    "eslint:recommended",
    "plugin:react/all",
    "plugin:jsx-a11y/strict",
    "plugin:import/errors",
    "plugin:jest/all"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "globals": {
    "fixture": "readonly"
  },
  "parser": "babel-eslint",
  "rules": {
    "jest/no-hooks": false,
    "jest/prefer-expect-assertions": false,
    "jest/prefer-inline-snapshots": false,
    "jsx-a11y/label-has-for": false,
    "no-var": "error",
    "react/forbid-component-props": false,
    "react/jsx-curly-brace-presence": [
      true,
      {
        "props": "never",
        "children": "always"
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/jsx-fragments": false,
    "react/jsx-indent": [
      2,
      2
    ],
    "react/jsx-indent-props": [
      2,
      2
    ],
    "react/jsx-max-depth": false,
    "react/jsx-one-expression-per-line": [
      true,
      {
        "allow": "literal"
      }
    ],
    "react/jsx-props-no-spreading": false,
    "react/no-set-state": false,
    "react/prop-types": false,
    "react/static-property-placement": false,
    "semi": [
      "error",
      "never"
    ]
  },
  "overrides": [
    {
      "files": [
        "testcafe/*.js"
      ],
      "rules": {
        "jest/expect-expect": false,
        "jest/lowercase-name": false,
        "jest/no-test-callback": false,
        "jest/prefer-expect-assertions": false
      }
    }
  ],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    },
    "react": {
      "version": "detect"
    }
  }
}
